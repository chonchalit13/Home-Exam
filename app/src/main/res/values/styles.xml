<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextSize16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSize20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="white_16sp" parent="TextSize16sp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="white_20sp" parent="TextSize20sp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="black_20sp" parent="TextSize20sp">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>